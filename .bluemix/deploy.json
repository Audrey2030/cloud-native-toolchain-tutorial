{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "messages": {
       "$i18n": "locales.yml"
    },
     "title": {
      "$ref": "#/messages/deploy.title"
    },
    "description": {
      "$ref": "#/messages/deploy.description"
    },
    "longDescription": {
      "$ref": "#/messages/deploy.longDescription"
    },
    "type": "object",
    "properties": {
       "test-region": {
            "description": "The IBM Cloud CF region",
            "type": "string"
        },
       "test-organization": {
            "description": "The IBM Cloud CF org",
            "type": "string"
        },
       "test-space": {
            "description": "The IBM Cloud CF space",
            "type": "string"
        },
       "prod-region": {
            "description": "The IBM Cloud CF region",
            "type": "string"
        },
       "prod-organization": {
            "description": "The IBM Cloud CF org",
            "type": "string"
        },
       "prod-space": {
            "description": "The IBM Cloud CF space",
            "type": "string"
        },
        "api-key": {
            "description": {
                "$ref": "#/messages/deploy.apiKeyDescription"
            },
            "type": "string"
        },
       "app-name": {
            "description": {
              "$ref": "#/messages/deploy.appDescription"
            },
            "type": "string",
            "maxLength": 63
        }
    },
    "required": ["test-region", "test-organization", "test-space", "prod-region", "prod-organization", "prod-space", "app-name", "api-key"],
    "form": [
       {
          "type": "validator",
          "url": "/devops/setup/bm-helper/helper.html"
       },        
        {
          "type": "text",
          "readonly": false,
          "title": {
            "$ref": "#/messages/deploy.appName"
          },
          "key": "app-name"
        },
        {
	        "type": "password",
	        "readonly": false,
	        "title": {
                "$ref": "#/messages/deploy.apiKeyTitle"
            },
	        "key": "api-key"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                  "type": "label",
                  "title": ""
                },
                {
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/region"
                  }
                },
                {
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/organization"
                  }
                },
                {
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/space"
                  }
                },
                {
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/testStage"
                  }
                },
                {
                  "type": "select",
                  "key": "test-region"
                },
                {
                  "type": "select",
                  "key": "test-organization"
                },
                {
                  "type": "select",
                  "key": "test-space",
                  "readonly": false
                },                
                {
                  "type": "label",
                  "title": {
                    "$ref": "#/messages/prodStage"
                  }
                },
                {
                  "type": "select",
                  "key": "prod-region"
                },
                {
                  "type": "select",
                  "key": "prod-organization"
                },
                {
                  "type": "select",
                  "key": "prod-space",
                  "readonly": false
                }
            ]
        }
    ]
}
